section.product.container
  - var numberPhotos = [1, 2, 3, 4, 5]
  .swiper.product__photos.js-product-photos-swiper
    ul.list-reset.swiper-wrapper
      each number in numberPhotos
        li.slide.product__photos-slide.swiper-slide(data-slide=`${number}`)
          img.slide__img(src=`../assets/img/product-photo-${number}.webp` alt=`Фото ${number}`)

  .swiper.product__thumbs.js-product-thumbs-swiper
    ul.list-reset.swiper-wrapper
      each number in numberPhotos
        li.slide.product__thumbs-slide.swiper-slide(data-slide=`${number}`)
          img.slide__img(src=`../assets/img/product-photo-${number}.webp` alt=`Фото ${number}`)

  .product__info
    .rating.product__rating
      include ../assets/img/star.svg
      span.rating__text= "4,8"
    h1.product__title Диван тканевый прямой “D-31”
    p.product__subtitle Мини 120&nbsp;см без ящика Stark синий (Рогожка)
    p.product__price 28 490 руб
    button.btn.product__btn-buy-1-click Купить в&nbsp;один клик
    button.btn.product__btn-add-to-cart Добавить в&nbsp;корзину

  .product__descr
    p.product__descr-title Опорный механизм
    p.product__descr-text Опорный механизм напоминает пантограф, к&nbsp;которому добавили дополнительную секцию. У&nbsp;опорного дивана сиденье &laquo;выпрыгивает&raquo; вперёд и&nbsp;вытаскивает вторую часть спального места. Заключительный штрих&nbsp;&mdash; опустить&nbsp;спинку.
    p.product__descr-text Этот механизм не&nbsp;портит пол и&nbsp;не&nbsp;боится ковров. Требуется чуть больше силы, чтобы разложить диван, но&nbsp;подросток справится.

  .product__schemes
    each number in [1, 2]
      picture.product__scheme
        source(srcset=`../assets/img/product-scheme-${number}-1400px.webp` media="(min-width: 1400px)" type="image/webp")
        source(srcset=`../assets/img/product-scheme-${number}-1024px.webp` media="(min-width: 1024px)" type="image/webp")
        source(srcset=`../assets/img/product-scheme-${number}-768px.webp` media="(min-width: 768px)" type="image/webp")
        source(srcset=`../assets/img/product-scheme-${number}.webp` type="image/webp")
        img(src=`../assets/img/product-scheme-${number}-1400px.webp` alt=`Слайд ${number}`)

  ul.list-reset.product__attributes
    each attr in [{ name: "Гарантия", value: "18 месяцев"}, { name: "Артикул", value: "AAA41269004"}, { name: "Длина", value: "163 см"}, { name: "Высота", value: "90 см"}, { name: "Глубина", value: "108 см"}, { name: "Спальное место", value: "200 см х 125 см"}, { name: "Высота посадки", value: "45 см"}, { name: "Механизм", value: "Опорный"}, { name: "Тип обивки", value: "Рогожка"}, { name: "Цвет", value: "Синий"}, { name: "Наполнитель", value: "Независимый пружинный блок"}, { name: "Материал каркаса", value: "Металл. рама с дерев. латами"}, { name: "Количество мест", value: "Двухместные"}, { name: "Категория", value: "Прямые тканевые диваны"}, { name: "Возврат", value: "Условия"}]
      li.attribute.product__attribute
        span.attribute__name= attr.name
        span.attribute__value= attr.value
