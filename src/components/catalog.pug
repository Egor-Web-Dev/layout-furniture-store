section.catalog.container
  h1.catalog__title.visually-hidden Интернет-магазина SitDownPls&nbsp;&mdash; Каталог
  aside.catalog__aside
    .filter.catalog__filter
      h4.filter__title.filter__title--desktop Фильтровать по:
      ul.list-reset.filter__list
        li.param.filter__param
          span.param__filter-name Цвет
          ul.list-reset.param__options
            each text in ["Коричневый", "Чёрный", "Синий", "Белый"]
              - var isChecked = text === "Чёрный" ? true : false
              li.param__option
                label.checkbox.param__checkbox
                  input.checkbox__input(type="checkbox" aria-label=`${text}` checked=isChecked)
                  include ../assets/img/checkbox.svg
                  span.checkbox__text(aria-hidden="true")= text

        li.param.filter__param
          span.param__filter-name Категория
          ul.list-reset.param__options
            each text in ["Диваны", "Кресла"]
              - var isChecked = text === "Диваны" ? true : false
              li.param__option
                label.checkbox.param__checkbox
                  input.checkbox__input(type="checkbox" aria-label=`${text}` checked=isChecked)
                  include ../assets/img/checkbox.svg
                  span.checkbox__text(aria-hidden="true")= text

        li.param.filter__param
          span.param__filter-name Цена
          .param__options.param__range
            span.param__range-text от
              input.param__range-input(type="number" aria-label="Фильтр по цене товара, от" min=2000 max=150000 placeholder="2000")
            span.param__range-text до
              input.param__range-input(type="number" aria-label="Фильтр по цене товара, до" min=2000 max=150000 placeholder="150 000")

    .banner.catalog__banner
      - var className = "banner__card"
      include ./banner-card

