section.offers.container
  h2.offers__title Специальные предложения
  .offers__slider.swiper.js-offers-swiper
    .swiper-wrapper
      each data, index in [{ title: "Кресло велюровое", model: "“X-24”", price: "15 990 руб", oldPrice: "24 990 руб", discount: "- 9 000" }, { title: "Диван тканевый ", model: "“Z-44”", price: "22 990 руб", oldPrice: "32 990 руб", discount: "- 10 000", large: true }, { title: "Будильник ", model: "“Quartz-23”", price: "1 290 руб", oldPrice: "1 890 руб", discount: "- 600" }, { title: "Мини-скульптура", model: "“Oh my deer”", price: "690 руб", oldPrice: "990 руб", discount: "- 300" }, { title: "Диван вел-флок", model: "“Z-85”", price: "22 990 руб", oldPrice: "32 990 руб", discount: "- 10 000", large: true }, { title: "Термометр +", model: "гидрометр “H-18”", price: "1 990 руб", oldPrice: "2 090 руб", discount: "- 700" }]
        - var i = index + 1
        article(class=`card offers__card swiper-slide${data.large ? " card--large" : ""}`)
          picture(class=`card__img${data.large ? " card__img--large": ""}`)
            if data.large
              source(srcset=`../assets/img/offer-${i}-large.webp` media="(min-width: 1400px)" type="image/webp")
              source(srcset=`../assets/img/offer-${i}.webp` type="image/webp")
            img(src=`../assets/img/offer-${i}.webp` loading="lazy" alt="")

          if data.large
            picture.card__schema
              source(srcset=`../assets/img/offer-${i}-scheme.webp` media="(min-width: 1400px)" type="image/webp")
              img(src=`../assets/img/offer-${i}-scheme.webp` alt=`${data.title} – Схема`)

          div(class=`card__info${data.large ? " card__info--large": ""}`)
            h4.card__title= data.title
              span.card__furniture-model= data.model
            .card__prices
              span.card__price= data.price
              span.card__old-price= data.oldPrice
            span.card__discount= data.discount
            a.link-reset.card__btn(href="product.html") Купить

    .swiper-button-prev
      include ../assets/img/arrow-right-circle-large.svg
    .swiper-button-next
      include ../assets/img/arrow-right-circle-large.svg

